{
  "name": "tdd",
  "version": "1.0.0",
  "main": "index.ts",
  "author": "Rui Hirano",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "12",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleNameMapper": {
      "^#/(.+)": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  }
}